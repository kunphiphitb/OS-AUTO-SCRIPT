echo "Dropbear : 109, 110, 442"  
echo "Squid3   : 8000, 8080, 8081, 8082, 3128 (limit to IP SSH)"  
echo "badvpn   : badvpn-udpgw port 7300"  
echo "nginx    : 80"  
echo ""  
